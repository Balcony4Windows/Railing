{
  "global": {
    "height": 40,
    "position": "top",
    "monitor": "primary",
    "margin": [5, 12, 0, 12],
    "font": "JetBrains Mono",
    "font_size": 14,
    "background": "#00000000",
    "blur": false,
    "radius": 12,
    "border_width": 2,
    "border_color": "#FF444444" 
  },
  "layout": {
    "left":   ["app_icon", "workspaces", "cpu", "ram"],
    "center": ["clock"],
    "right":  ["group_hardware", "tray", "notification"]
  },
  "app_icon": {
    "type": "app_icon",
    "style": { "padding": [0, 10], "margin": [4, 5, 4, 5] }
  },
  "workspaces": {
    "type": "workspaces",
    "style": {
      "bg": "#1a1b26",
      "radius": 8,
      "padding": [4, 8],
      "margin": [4, 5, 4, 5]
    },
    "item_style": { "fg": "#565f89", "padding": [2, 6] },
    "states": {
      "active": { "fg": "#7aa2f7", "bg": "#292e42" },
      "urgent": { "fg": "#f7768e" }
    }
  },
  "cpu": { 
    "type": "cpu",
    "format": "CPU {usage}%",
    "interval": 1000,
    "style": { "bg": "#1a1b26", "fg": "#c0caf5", "radius": 8, "padding": [0, 12], "margin": [4, 5, 4, 5] },
    "thresholds": [ { "val": 80, "style": { "fg": "#f7768e" } } ]
  },
  "ram": {
    "type": "ram",
    "format": "RAM {usage}%",
    "style": { "bg": "#1a1b26", "fg": "#9ece6a", "radius": 8, "padding": [0, 12], "margin": [4, 5, 4, 5] }
  },
  "clock": {
    "type": "clock",
    "format": "{:%H:%M}",
    "style": { "bg": "#1a1b26", "fg": "#7aa2f7", "radius": 8, "padding": [0, 16], "margin": [4, 5, 4, 5], "font_weight": "bold" }
  },
  "group_hardware": {
    "type": "group",
    "orientation": "horizontal",
    "modules": ["network", "volume", "battery"],
    "style": { "bg": "#1a1b26", "radius": 12, "padding": [0, 5], "margin": [4, 10, 4, 10] }
  },
  "network": { "type": "network", "format": "{icon}", "style": { "bg": "transparent", "fg": "#c0caf5", "padding": [0, 8] } },
  "volume": { "type": "audio", "format": "{icon} {vol}%", "style": { "bg": "transparent", "fg": "#c0caf5", "padding": [0, 8] } },
  "battery": { "type": "battery", "format": "{icon}", "style": { "fg": "#c0caf5", "padding": [0, 8] } },
  "tray": { "type": "tray", "format": "{icon}", "style": { "fg": "#c0caf5", "padding": [0, 8] } },
  "notification": { "type": "notification", "format": "{icon}", "style": { "fg": "#c0caf5", "padding": [0, 8] } }
}
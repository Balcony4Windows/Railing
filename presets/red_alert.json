{
  "global": {
    "height": 32,
    "position": "top",
    "monitor": "primary",
    "blur": false,
    "font": "Segoe UI",
    "font_size": 12.0,
    "margin": [0, 0, 0, 0],
    "animation": { "enabled": true, "duration": 100, "start_scale": 1.0, "fps": 60 },
    "style": {
      "bg": "#F0000000",
      "radius": 0,
      "border_width": 1.0,
      "border_color": "#FFCC0000"
    }
  },
  "layout": {
    "left": [ "label_sys", "cpu", "ram" ],
    "center": [ "alert_clock" ],
    "right": [ "lock_btn", "task_btn", "tray" ]
  },
  "label_sys": {
    "type": "custom",
    "format": "/// SYSTEM_STATUS",
    "style": { "fg": "#FF660000", "padding": [0, 12], "margin": [0, 0, 0, 0], "font_weight": "bold" }
  },
  "cpu": {
    "type": "cpu",
    "format": "CPU: {usage}%",
    "interval": 500,
    "style": { "fg": "#FFFF0000", "padding": [0, 8], "margin": [0, 0, 0, 0] },
    "thresholds": [
      { "val": 50, "style": { "fg": "#FFFF8800" } },
      { "val": 90, "style": { "fg": "#000000", "bg": "#FFFF0000" } }
    ]
  },
  "ram": {
    "type": "ram",
    "format": "MEM: {usage}%",
    "style": { "fg": "#FFFF0000", "padding": [0, 8], "margin": [0, 0, 0, 0] }
  },
  "alert_clock": {
    "type": "clock",
    "format": "- %H:%M:%S -",
    "style": { "fg": "#FFFFFFFF", "bg": "#FFCC0000", "padding": [0, 20], "margin": [0, 0, 0, 0], "radius": 0, "font_weight": "bold" }
  },
  "lock_btn": {
    "type": "custom",
    "format": "LOCK",
    "on_click": "lock",
    "style": { "fg": "#FFFF0000", "border_width": 1.0, "border_color": "#FF550000", "padding": [0, 12], "margin": [4, 2, 4, 2] },
    "states": { "hover": { "bg": "#FFFF0000", "fg": "#000000" } }
  },
  "task_btn": {
    "type": "custom",
    "format": "TASK",
    "on_click": "taskmgr",
    "style": { "fg": "#FFFF0000", "border_width": 1.0, "border_color": "#FF550000", "padding": [0, 12], "margin": [4, 2, 4, 2] },
    "states": { "hover": { "bg": "#FFFF0000", "fg": "#000000" } }
  },
  "tray": {
    "type": "tray",
    "style": { "fg": "#FFFF0000", "padding": [0, 8], "margin": [0, 8, 0, 0] },
    "states": { "hover": { "bg": "#FF330000" } }
  }
}
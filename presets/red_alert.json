{
"global": {
    "height": 28,
    "position": "top",
    "monitor": "primary",
    "margin": [0, 0, 0, 0],
    "animation": {
      "enabled": true,
      "duration": 50,
      "startScale": 0.2,
      "fps": 120
    },
    "font": "Consolas",
    "font_size": 10,
    "font_weight": "normal",
    "background": "#ff000000",
    "blur": false,
    "radius": 0,
    "border_width": 0,
    "border_color": "#ff000000"
  },
  "layout": {
    "left": ["workspaces"],
    "center": ["clock"],
    "right": ["cpu", "gpu", "ram", "group_hardware"]
  },
  "workspaces": {
    "type": "workspaces",
    "style": { "bg": "transparent", "radius": 0, "padding": [0, 0], "margin": [0, 0, 0, 0] },
    "item_style": { "fg": "#ff444444", "padding": [0, 8], "radius": 0 },
    "states": {
      "active": { "fg": "#ffff0000", "bg": "#ff220000", "font_weight": "bold" },
      "hover": { "fg": "#ffffffff" }
    }
  },
"clock": {
  "type": "clock", 
  "format": "[ %Y-%m-%d | %H:%M:%S ]",
  "style": { "fg": "#ffff0000", "bg": "#ff000000", "padding": [0, 0] }
},
  "cpu": {
    "type": "cpu", "format": "CPU:{usage}%", "interval": 1000,
    "style": { "fg": "#ffff0000", "bg": "#ff000000", "radius": 0, "padding": [0, 8], "margin": [0, 0, 0, 0] },
    "thresholds": [{ "val": 90, "style": { "fg": "#ffffffff", "bg": "#ffff0000" } }]
  },
  "gpu": {
    "type": "gpu", "format": "GPU:{temp}\u00B0C", "interval": 1000,
    "style": { "fg": "#ffff0000", "bg": "#ff000000", "radius": 0, "padding": [0, 8], "margin": [0, 0, 0, 0] },
    "thresholds": [{ "val": 80, "style": { "fg": "#ffffffff", "bg": "#ffff0000" } }]
  },
  "ram": {
    "type": "ram", "format": "RAM:{usage}%",
    "style": { "fg": "#ffff0000", "bg": "#ff000000", "radius": 0, "padding": [0, 8], "margin": [0, 0, 0, 0] }
  },
  "group_hardware": {
    "type": "group", "modules": ["network", "volume", "battery"],
    "style": { "bg": "#ff111111", "radius": 0, "padding": [0, 4], "margin": [4, 4, 4, 4], "border_width": 1, "border_color": "#ff333333" }
  },
  "network": { "type": "network", "style": { "fg": "#ffaaaaaa", "padding": [0, 6] } },
  "volume": { "type": "audio", "style": { "fg": "#ffaaaaaa", "padding": [0, 6] } },
  "battery": { "type": "battery", "style": { "fg": "#ffaaaaaa", "padding": [0, 6] } }
}

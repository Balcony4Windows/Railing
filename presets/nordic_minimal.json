{
  "global": {
    "height": 44,
    "position": "top",
    "monitor": "primary",
    "blur": false,
    "font": "Segoe UI",
    "font_size": 13.0,
    "margin": [8, 8, 0, 8],
    "animation": { "enabled": true, "duration": 300, "start_scale": 0.98, "fps": 60 },
    "style": {
      "bg": "#FF2E3440", 
      "radius": 6,
      "border_width": 0.0,
      "border_color": "transparent"
    }
  },
  "layout": {
    "left": [ "workspaces" ],
    "center": [ "clock" ],
    "right": [ "browser", "files", "tray" ]
  },
  "workspaces": {
    "type": "workspaces",
    "style": { "margin": [6, 6, 6, 6] },
    "item_style": {
      "padding": [0, 14], "margin": [0, 2, 0, 2], "radius": 4,
      "fg": "#D8DEE9", "bg": "transparent"
    },
    "states": {
      "active": { "bg": "#FF434C5E", "fg": "#ECEFF4", "font_weight": "bold" },
      "hover": { "bg": "#FF3B4252" }
    }
  },
  "clock": {
    "type": "clock",
    "format": "%A %d %b  //  %H:%M",
    "style": { "fg": "#88C0D0", "padding": [0, 0], "margin": [0, 0, 0, 0], "font_weight": "bold" }
  },
  "browser": {
    "type": "custom",
    "format": "Web",
    "on_click": "exec:chrome.exe",
    "style": { "fg": "#A3BE8C", "bg": "#FF3B4252", "padding": [0, 16], "margin": [8, 4, 8, 4], "radius": 4 },
    "states": { "hover": { "bg": "#FFA3BE8C", "fg": "#2E3440" } }
  },
  "files": {
    "type": "custom",
    "format": "Files",
    "on_click": "exec:explorer.exe",
    "style": { "fg": "#EBCB8B", "bg": "#FF3B4252", "padding": [0, 16], "margin": [8, 4, 8, 4], "radius": 4 },
    "states": { "hover": { "bg": "#FFEBCB8B", "fg": "#2E3440" } }
  },
  "tray": {
    "type": "tray",
    "style": { "fg": "#D8DEE9", "padding": [0, 12], "margin": [4, 4, 4, 4], "radius": 4 },
    "states": { "hover": { "bg": "#FF434C5E" } }
  }
}
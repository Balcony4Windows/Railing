{
  "global": {
    "height": 36,
    "position": "bottom",
    "monitor": "primary",
    "blur": true,
    "font": "Consolas",
    "font_size": 14.0,
    "margin": [0, 0, 0, 0],
    "animation": { "enabled": true, "duration": 150, "start_scale": 1.0, "fps": 60 },
    "style": {
      "bg": "#EE050505",
      "radius": 0,
      "border_width": 2.0,
      "border_color": "#FF00FFFF" 
    }
  },
  "layout": {
    "left": [ "start_btn", "cmd_btn" ],
    "center": [ "workspaces" ],
    "right": [ "gpu", "cpu", "ping", "clock" ]
  },
  "start_btn": {
    "type": "custom",
    "format": " SYS_ROOT ",
    "on_click": "toggle_start",
    "style": {
      "fg": "#FF00FFFF", "bg": "#2000FFFF", 
      "padding": [0, 10], "margin": [0, 0, 0, 0], 
      "border_width": 0, "border_color": "#FF00FFFF" 
    },
    "states": { "hover": { "bg": "#FF00FFFF", "fg": "#000000" } }
  },
  "cmd_btn": {
    "type": "custom",
    "format": ">_PWSH",
    "on_click": "exec:wt.exe",
    "style": { "fg": "#00FF00", "padding": [0, 10], "margin": [0, 0, 0, 0] },
    "states": { "hover": { "fg": "#AAFFAA", "bg": "#1000FF00" } }
  },
  "workspaces": {
    "type": "workspaces",
    "style": { "margin": [0, 0, 0, 0] },
    "item_style": {
      "padding": [0, 16], "margin": [0, 0, 0, 0], "radius": 0,
      "fg": "#555555", "bg": "transparent", "border_width": 0
    },
    "states": {
      "active": { "fg": "#00FFFF", "border_width": 2.0, "border_color": "#00FFFF" },
      "hover": { "fg": "#FFFFFF", "bg": "#222222" }
    }
  },
  "gpu": {
    "type": "gpu",
    "format": "GPU:{temp}C",
    "style": { "fg": "#FF0055", "padding": [0, 8], "margin": [0, 0, 0, 0] }
  },
  "cpu": {
    "type": "cpu",
    "format": "CPU:{usage}%",
    "style": { "fg": "#00FFFF", "padding": [0, 8], "margin": [0, 0, 0, 0] }
  },
  "ping": {
    "type": "ping",
    "target": "1.1.1.1",
    "format": "NET:{ping}ms",
    "style": { "fg": "#FFFF00", "padding": [0, 8], "margin": [0, 0, 0, 0] }
  },
  "clock": {
    "type": "clock",
    "format": "[ %H:%M:%S ]",
    "style": { "fg": "#FFFFFF", "bg": "#20FFFFFF", "padding": [0, 12], "margin": [0, 0, 0, 0] }
  }
}
{
  "global": {
    "height": 40,
    "position": "top",
    "monitor": "primary",
    "blur": true,
    "font": "Segoe UI Semibold",
    "font_size": 13.0,
    "margin": [10, 20, 0, 20], 
    "animation": {
      "enabled": true,
      "duration": 400,
      "start_scale": 0.8,
      "fps": 60
    },
    "style": {
      "bg": "#40000000", 
      "radius": 20, 
      "border_width": 1.0,
      "border_color": "#20FFFFFF"
    }
  },
  "layout": {
    "left": [ "clock", "weather" ],
    "center": [ "workspaces" ],
    "right": [ "cpu", "ram", "audio", "tray" ]
  },
  "workspaces": {
    "type": "workspaces",
    "style": { "padding": [0, 0], "margin": [0, 0, 0, 0] },
    "item_style": {
      "padding": [0, 12], "margin": [4, 2, 4, 2], "radius": 16,
      "fg": "#CCFFFFFF", "bg": "transparent"
    },
    "states": {
      "active": { "fg": "#000000", "bg": "#DDFFFFFF" },
      "hover": { "bg": "#20FFFFFF", "fg": "#FFFFFF" }
    }
  },
  "clock": {
    "type": "clock",
    "format": "%H:%M  %a %d",
    "style": { "fg": "#FFFFFF", "padding": [0, 20], "margin": [0, 0, 0, 0] }
  },
  "weather": {
    "type": "weather",
    "latitude": "40.7128", 
    "longitude": "-74.0060",
    "interval": 1800000, 
    "format": "{icon} {temp}Â°",
    "on_click": "shell:msnweather:",
    "style": {
      "fg": "#FFFFFFFF",
      "bg": "#1AFFFFFF",
      "padding": [0, 12],
      "margin": [6, 4, 6, 4],
      "radius": 4
    }
  },
  "cpu": {
    "type": "cpu",
    "format": "CPU {usage}%",
    "interval": 2000,
    "style": { "fg": "#AAFFFFFF", "padding": [0, 8], "margin": [0, 0, 0, 0] },
    "thresholds": [{ "val": 80, "style": { "fg": "#FF8888" } }]
  },
  "ram": {
    "type": "ram",
    "format": "RAM {usage}%",
    "interval": 2000,
    "style": { "fg": "#AAFFFFFF", "padding": [0, 8], "margin": [0, 0, 0, 0] }
  },
  "audio": {
    "type": "audio",
    "format": "ðŸ”Š {vol}%",
    "style": { "fg": "#FFFFFF", "padding": [0, 15], "margin": [4, 4, 4, 4], "radius": 16 },
    "states": { "hover": { "bg": "#20FFFFFF" } }
  },
  "tray": {
    "type": "tray",
    "style": { "fg": "#FFFFFF", "padding": [0, 15], "margin": [0, 5, 0, 0] },
    "states": { "hover": { "bg": "#20FFFFFF", "radius": 20 } }
  }
}